{% if app.user.username is defined %}
<ul>
    <li>
        <a href="{{ path('logout') }}" title="logout">X</a>
    </li>
    {% if is_granted('ROLE_SUPERUSER') %}
    <li {% if controller_name() == 'group' or controller_name() == 'user' %}class="act"{% endif %}>
        <a href="{{ path('user') }}">Administration</a>
    </li>
    {% endif %}
    {% for item in applicationGet('app-global-menu') %}
    {# RAW CONTENT #}
    {% if item.raw is defined %}
        {{ item.raw|raw }}

    {# INCLUDE CONTENT #}
    {% elseif item.template is defined %}
        {% include item.template %}

    {# USE TEMPLATE #}
    {% else %}
        <li class="{% if item.active is defined and item.active %}act{% endif %}">
            <a href="{{ path(item.path, item.params) }}">{{ item.label|trans }}</a>
        </li>
    {% endif %}
    {% endfor %}
    {% block globalMenuElement %}{% endblock %}
</ul>
{% endif %}
