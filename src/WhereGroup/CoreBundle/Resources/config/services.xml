<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- SERVICE -->
        <parameter key="metador.application.class">WhereGroup\CoreBundle\Component\Application</parameter>
        <parameter key="metador.twig.class">WhereGroup\CoreBundle\Twig\Extension\MetadorExtension</parameter>
        <parameter key="metador.metadata_import.class">WhereGroup\CoreBundle\Component\MetadataImport</parameter>
        <parameter key="metador.wms_import.class">WhereGroup\CoreBundle\Component\WmsImport</parameter>
        <parameter key="metador.listener.class">WhereGroup\CoreBundle\EventListener\MetadorListener</parameter>
        <parameter key="metador.user.class">WhereGroup\CoreBundle\Component\MetadorUser</parameter>
        <parameter key="metador.metadata.class">WhereGroup\CoreBundle\Component\Metadata</parameter>
        <parameter key="metador.address.class">WhereGroup\CoreBundle\Component\Address</parameter>
        <parameter key="metador.wizard.class">WhereGroup\CoreBundle\Component\Wizard</parameter>

        <!-- TWIG EXTENSION -->
        <parameter key="metador.twig.controllerinfo.class">WhereGroup\CoreBundle\Twig\Extension\ControllerInfoExtension</parameter>
        <parameter key="metador.twig.getparameter.class">WhereGroup\CoreBundle\Twig\Extension\GetParameterExtension</parameter>
        <parameter key="metador.twig.debug.class">WhereGroup\CoreBundle\Twig\Extension\DebugExtension</parameter>
        <parameter key="metador.twig.casttoarray.class">WhereGroup\CoreBundle\Twig\Extension\CastToArrayExtension</parameter>
        <parameter key="metador.twig.application.class">WhereGroup\CoreBundle\Twig\Extension\ApplicationExtension</parameter>
     </parameters>

    <services>
        <!-- SERVICE -->
        <service id="metador.application" class="%metador.application.class%">
            <argument type="service" id="service_container"/>
        </service>
        <service id="metador.twig_extension" class="%metador.twig.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
        <service id="metadata_import" class="%metador.metadata_import.class%" />
        <service id="wms_import" class="%metador.wms_import.class%">
            <argument type="service" id="metadata_import" />
            <argument type="service" id="metador_metadata" />
            <argument>%metador%</argument>
        </service>
        <service id="metador.listener" class="%metador.listener.class%">
            <tag name="kernel.event_listener" event="metador.pre_save" method="onPreSave" />
            <argument type="service" id="service_container" />
        </service>
        <service id="metador_user" class="%metador.user.class%">
            <argument type="service" id="service_container" />
        </service>
        <service id="metador_wizard" class="%metador.wizard.class%">
            <argument type="service" id="service_container" />
        </service>
        <service id="metador_address" class="%metador.address.class%">
            <argument type="service" id="service_container" />
        </service>
        <service id="metador_metadata" class="%metador.metadata.class%">
            <argument type="service" id="service_container" />
            <argument type="service" id="metador_user" />
            <argument type="service" id="metador_address" />
        </service>

        <!-- TWIG EXTENSION -->
        <service id="metador.twig.controllerinfo" class="%metador.twig.controllerinfo.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
        <service id="metador.twig.getparameter" class="%metador.twig.getparameter.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
        <service id="metador.twig.debug" class="%metador.twig.debug.class%">
            <tag name="twig.extension" />
        </service>
        <service id="metador.twig.casttoarray" class="%metador.twig.casttoarray.class%">
            <tag name="twig.extension" />
        </service>
        <service id="metador.twig.application" class="%metador.twig.application.class%">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
