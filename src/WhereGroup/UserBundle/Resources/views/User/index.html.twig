{% extends 'WhereGroupThemeBundle:Template:admin.html.twig' %}

{% block content %}
<h1>{{ 'Benutzer'|trans }}</h1>

<div class="tableBorder">
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Benutzername'|trans }} {{ 'Benutzer'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Isactive'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('metador_admin_user_edit', { 'id': entity.id }) }}">
                        {{ entity.username }}</td>
                    </a>
                <td>{{ entity.email }}</td>
                <td>{{ entity.isActive }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<br/>
<div class="btn">
    <a href="{{ path('metador_admin_user_new') }}">
        <div class="icon add"></div> {{ 'Neu'|trans }}
    </a>
</div>
{% endblock %}
