           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wheregroup.export.metadata.listener.class">WhereGroup\Plugin\ExportBundle\EventListener\MetadataListener</parameter>
     </parameters>

    <services>
        <service id="wheregroup_export_metadata_listener" class="%wheregroup.export.metadata.listener.class%">
            <tag name="kernel.event_listener" event="metador.post_save" method="onPostSave" />
        </service>
    </services>
</container>
