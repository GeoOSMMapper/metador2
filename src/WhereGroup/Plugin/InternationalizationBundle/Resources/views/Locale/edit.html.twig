{% extends 'WhereGroupPluginBundle::template.html.twig' %}

{% block content %}
    <select name="bundle" data-cmd="get-translation" data-name="bundle">
        <option value=""></option>
    {% for bundle in bundles  %}
        <option value="{{ bundle }}">{{ bundle }}</option>
    {% endfor %}
    </select>

    <select name="domain" data-cmd="get-translation" data-name="domain">
        <option value="messages">messages</option>
    </select>

    <select name="locale" data-cmd="get-translation" data-name="locale">
    {% for locale in locales %}
        <option value="{{ locale }}">{{ locale }}</option>
    {% endfor %}
    </select>

    <hr/>

    <div data-name="result"></div>
{% endblock %}
